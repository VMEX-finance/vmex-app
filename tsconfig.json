{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/api": ["api/index.ts"],
            "@/pages": ["pages/index.ts"],
            "@/store": ["store/index.ts"],
            "@/utils": ["utils/index.ts"],
            "@/ui/base": ["ui/base/index.ts"],
            "@/ui/components": ["ui/components/index.ts"],
            "@/ui/features": ["ui/features/index.ts"],
            "@/ui/modals": ["ui/modals/index.ts"],
            "@/ui/tables": ["ui/tables/index.ts"],
            "@/ui/templates": ["ui/templates/index.ts"],
            "@/hooks": ["hooks/index.ts"]
        },
        "target": "es5",
        "outDir": "lib",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "declarationDir": "lib",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "declarations.d.ts"],
    "exclude": ["node_modules", "lib"]
}
