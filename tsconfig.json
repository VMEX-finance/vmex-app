{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/api": ["api/index.ts"],
            "@/api/*": ["api/*"],
            "@/pages": ["pages/index.ts"],
            "@/pages/*": ["pages/*"],
            "@/store": ["store/index.ts"],
            "@/store/*": ["store/*"],
            "@/utils": ["utils/index.ts"],
            "@/utils/*": ["utils/*"],
            "@/ui/base": ["ui/base/index.ts"],
            "@/ui/*": ["ui/base/*"],
            "@/ui/components": ["ui/components/index.ts"],
            "@/ui/components/*": ["ui/components/*"],
            "@/ui/features": ["ui/features/index.ts"],
            "@/ui/features/*": ["ui/features/*"],
            "@/ui/modals": ["ui/modals/index.ts"],
            "@/ui/modals/*": ["ui/modals/*"],
            "@/ui/tables": ["ui/tables/index.ts"],
            "@/ui/tables/*": ["ui/tables/*"],
            "@/ui/templates": ["ui/templates/index.ts"],
            "@/ui/templates/*": ["ui/templates/*"],
            "@/ui/charts": ["ui/charts/index.ts"],
            "@/ui/charts/*": ["ui/charts/*"],
            "@/hooks": ["hooks/index.ts"],
            "@/hooks/*": ["hooks/*"],
            "@/config": ["config/index.ts"],
            "@/config/*": ["config/*"]
        },
        "target": "ES6",
        "outDir": "lib",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "declarationDir": "lib",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "declarations.d.ts"],
    "exclude": ["node_modules", "lib"]
}
