
{
    "compilerOptions": {
      "paths": {
        "@components/*": ["components/*"],
        "@templates/*": ["templates/*"],
        "@features/*": ["features/*"],
        "@pages/*": ["pages/*"],
        "@pages": ["pages/index.ts"],
        "@store/*": ["store/*"],
        "@hooks/*": ["hooks/*"],
        "@app/*": ["./*"]
      },
      "baseUrl": "src",
      "target": "es5",
      "outDir": "lib",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "declaration": true,
      "declarationDir": "lib",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
  }